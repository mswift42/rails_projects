<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Summary</th>
      <th>Content</th>
      <th>Todo</th>
      <th>Task</th>
      <th>Scheduled</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.summary %></td>
        <td><%= task.content %></td>
        <td><%= task.todo %></td>
        <td><%= task.task_id %></td>
        <td><%= task.scheduled %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

